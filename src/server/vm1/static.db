{ UID: uid-7356-dfcc-2173-4525
  is: editable gui
  title: Calculator
  local: { acc: 0 num: 0 lastop: + }
  Rules:
  { is: gui rule
    Alerted: { is: form  form: { pushed: /[0-9]|dp|cl/ } }
    local: { num: => if (@Alerted:form:pushed == cl) then 0 else (if (@Alerted:form:pushed == dp) then (if (not @. contains .) then (join (@. .)) else @.) else (join (@. (@Alerted:form:pushed + 0)))) }
    view: { result: { input: textfield  value: => @local:num }}
  }
  { is: gui rule
    Alerted: { is: form  form: { pushed: /plus|minus|times|divide|equals/ } }
    local: {
      acc: => if (@local:num set) then (@. @local:lastop @local:num) else @.
      lastop: => { plus: +  minus: -  times: ×  divide: ÷  equals: + } select @Alerted:form:pushed
      num: => #
    }
    view: { result: { input: textfield  value: => @local:acc }}
  }
  view: {
   result: { is: style direction: horizontal } { input: textfield  value: 0 }
   buttons:
     { style: { is: style direction: horizontal } 07: { input: button label: 7 } 08: { input: button label: 8 } 09: { input: button label: 9 } times:  { input: button label: × } chgsgn: { input: button label: +/- } }
     { style: { is: style direction: horizontal } 04: { input: button label: 4 } 05: { input: button label: 5 } 06: { input: button label: 6 } divide: { input: button label: ÷ } mstore: { input: button label: MS  } }
     { style: { is: style direction: horizontal } 01: { input: button label: 1 } 02: { input: button label: 2 } 03: { input: button label: 3 } plus:   { input: button label: + } mrecal: { input: button label: MR  } }
     { style: { is: style direction: horizontal } cl: { input: button label: C } 00: { input: button label: 0 } dp: { input: button label: . } minus:  { input: button label: - } equals: { input: button label: =   } }
 }
}

