{ UID: uid-9c0d-fb2b-53e5-19c3
  is: editable minecraft pig rule
  when: "run, scan around player"
  alive: true
  set-position: @world:player:position !=> @world:player:position
  scanpos: => @position + (-2 0 -2)
  scanning: => { for: blocks size: 5 2 5 position: @scanpos }
  Notifying: => @. with @world
}

{ UID: uid-ca56-08ba-9031-2f05
  is: editable minecraft pig rule
  when: "stone found, vaporise it"
  alive: true
  on-ground: true
  world-view: { position: @scanpos list: (((stone))) }
  placing: => { material: @world-view:list each ({ stone: air gravel: air dirt: air } select @.. else @.. )
                position: @scanpos trail: true }
}

{ UID: uid-c14a-f563-7693-004a
  is: editable minecraft cow rule
  when: "run, scan below ground"
  alive: true
  pos: @position !=> @position
  scanpos: => @pos:0 0 @pos:2
  scanning: => { for: blocks size: 2 16 2 position: @scanpos }
  Notifying: => @. with @world
}

{ UID: uid-71c6-7f99-3485-0e4d
  is: editable minecraft cow rule
  when: "something found, set marker on surface"
  alive: true
  on-ground: true
  world-view: { position: @scanpos list: (((/iron-ore/))) }
  placing: => { material: rose position: @pos + (0 0 0) trail: true }
}

